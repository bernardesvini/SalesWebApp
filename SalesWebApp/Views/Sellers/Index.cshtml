@model IEnumerable<Seller>
@*declaração do model para que possa receber a lista a ser mostrada no index, SalesWebApp.Models.Seller, seria outra maneira de declaração. IEnemerable usado para que seja o mais generico e receba outros tipos que nao list*@


@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover"

       <thead> @*Cabeçalho*@
           <tr = class=" success">
               @*Cria a linha do cabeçalho da tabela, success poem cor de fundo*@

               <th>
                   @*cria coluna da tabela*@
                   @Html.DisplayNameFor(model => model.Name)
               </th>
               <th>
                   @*cria coluna da tabela*@
                   @Html.DisplayNameFor(model => model.Email)
               </th>
               <th>
                   @*cria coluna da tabela*@
                   @Html.DisplayNameFor(model => model.BirthDate)
               </th>
               <th>
                   @*cria coluna da tabela*@
                   @Html.DisplayNameFor(model => model.BaseSalary)
               </th>
               <th>

               </th>
           </tr>
       </thead>

        <tbody> @*Corpo da tabela*@

            @foreach ( var item in Model)
            {
            <tr>
                @*cria linha*@
                <td>
                    @*cria coluna*@

                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*cria coluna*@

                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @*cria coluna*@

                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @*cria coluna*@

                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
            }

        </tbody>



</table>

